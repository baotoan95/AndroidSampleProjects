<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.baotoan.sharepreferencedemo.MainActivity">

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lbl_volume"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/seek_volume"
        android:max="30"
        android:progress="15" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_volume"
        android:id="@+id/lbl_min"
        android:layout_alignLeft="@+id/seek_volume"
        android:layout_alignStart="@+id/seek_volume" />

    <TextView
        android:text="30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lbl_min"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/lbl_max" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tog_sound" />

    <TextView
        android:text="Volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_volume"
        android:textSize="18sp"
        android:layout_below="@+id/tog_sound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="Sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblSound"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/tog_sound"
        android:layout_alignBottom="@+id/tog_sound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_value"
        android:layout_alignBaseline="@+id/lbl_min"
        android:layout_alignBottom="@+id/lbl_min"
        android:layout_toLeftOf="@+id/tog_sound"
        android:layout_toStartOf="@+id/tog_sound" />

</RelativeLayout>
