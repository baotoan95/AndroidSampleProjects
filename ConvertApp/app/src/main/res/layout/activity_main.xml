<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context="com.example.baotoan.convertapp.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/layout_distance">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/distance"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:id="@+id/icon_distance"
            android:src="@drawable/distance" />

        <TextView
            android:text="Distance convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_distance"
            android:layout_toRightOf="@+id/icon_distance"
            android:id="@+id/txt_distance"
            android:layout_alignBottom="@+id/icon_distance"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/layout_weight">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/weight"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:id="@+id/icon_weight"
            android:src="@drawable/weight" />

        <TextView
            android:text="Weight convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_weight"
            android:layout_toRightOf="@+id/icon_weight"
            android:id="@+id/txt_weight"
            android:layout_alignBottom="@+id/icon_weight"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/layout_temperature">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tempareture"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:id="@+id/icon_temperature"
            android:src="@drawable/tempareture" />

        <TextView
            android:text="Temperature convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_temperature"
            android:layout_toRightOf="@+id/icon_temperature"
            android:id="@+id/txt_temperature"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/icon_temperature" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/layout_speed">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/s"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:id="@+id/icon_speed"
            android:src="@drawable/s"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Speed convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_speed"
            android:layout_toRightOf="@+id/icon_speed"
            android:id="@+id/txt_speed"
            android:layout_alignBottom="@+id/icon_speed"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>

</LinearLayout>
