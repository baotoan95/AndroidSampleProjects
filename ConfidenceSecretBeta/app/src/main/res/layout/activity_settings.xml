<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.confidence.btit95.confidencesecretbeta.SettingsActivity">

    <TextView
        android:text="@string/st_setting_sc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:drawableBottom="@color/blue_gray"
        android:id="@+id/txt_st_security"
        android:textStyle="normal|bold|italic"
        android:fontFamily="sans-serif" />

    <CheckBox
        android:text="@string/st_setting_sc_enlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_st_security"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cb_enable_lock" />

    <CheckBox
        android:text="@string/st_setting_sc_encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_enable_lock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cb_encrypt_content" />

    <TextView
        android:text="@string/st_setting_lang_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:drawableBottom="@color/blue_gray"
        android:id="@+id/txt_st_lang"
        android:textStyle="normal|bold|italic"
        android:fontFamily="sans-serif"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/cb_encrypt_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:id="@+id/spinner_lang"
        android:layout_below="@+id/txt_st_lang"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp">
    </Spinner>

</RelativeLayout>
