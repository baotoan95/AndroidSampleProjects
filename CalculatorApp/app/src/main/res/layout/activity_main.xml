<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="6"
    tools:context="com.example.baotoan.calculatorapp.MainActivity">


    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:id="@+id/textView4"
        android:textSize="50sp"
        style="@style/style3" />

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:weightSum="4"
    android:layout_weight="1">

        <Button
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_c"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
        android:text="%"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/percent"
        android:layout_weight="1"
            style="@style/style1" />

    <Button
        android:text="+/-"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/btn_negative"
        android:layout_weight="1"
        style="@style/style1" />

    <Button
        android:text=":"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/btn_div"
        android:layout_weight="1"
        style="@style/style2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        android:layout_weight="1">

        <Button
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_7"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_8"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_9"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
            android:text="x"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_mul"
            android:layout_weight="1"
            style="@style/style2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        android:layout_weight="1">

        <Button
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_4"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_5"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_6"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_add"
            android:layout_weight="1"
            style="@style/style2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        android:layout_weight="1">

        <Button
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_1"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_2"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_3"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_sub"
            android:layout_weight="1"
            style="@style/style2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        android:layout_weight="1">

        <Button
            android:text="000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/button7"
            android:layout_weight="2"
            style="@style/style1" />

        <Button
            android:text="."
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_dot"
            android:layout_weight="1"
            style="@style/style1" />

        <Button
            android:text="="
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_compute"
            android:layout_weight="1"
            style="@style/style2" />
    </LinearLayout>
</LinearLayout>
