<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_write_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.baotoan.personaldairy.views.WriteNoteActivity">

    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="android.support.v7.widget.Toolbar"
        android:layout_alignParentTop="true"
        android:background="#1f83d4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/write_tool_bar" />

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_title"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/edt_title"
        android:layout_alignBottom="@+id/edt_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:id="@+id/edt_title"
        android:layout_below="@+id/write_tool_bar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lbl_title"
        android:layout_toEndOf="@+id/lbl_title"
        android:hint="Enter the title"
        android:layout_marginRight="5dp" />

    <view
        android:layout_width="wrap_content"
        class="android.support.v4.view.ViewPager"
        android:layout_alignParentBottom="true"
        android:id="@+id/image_slider"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:ems="10"
        android:id="@+id/edt_content"
        android:hint="Content"
        android:layout_height="match_parent"
        android:layout_below="@+id/edt_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/image_slider" />
</RelativeLayout>
