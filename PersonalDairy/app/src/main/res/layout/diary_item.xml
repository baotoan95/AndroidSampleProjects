<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:background="#ff0000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="5dp"
        android:id="@+id/ly_status"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:id="@+id/ly_datetime"
        android:weightSum="3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ly_status"
        android:layout_toEndOf="@+id/ly_status"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp">

        <TextView
            android:text="Saturday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:id="@+id/lbl_weekdays" />

        <TextView
            android:text="30 Jul"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:id="@+id/lbl_date"
            android:textStyle="normal|bold" />

        <TextView
            android:text="03:10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:id="@+id/lbl_time" />

    </LinearLayout>

    <TextView
        android:text="I miss her"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_title"
        android:id="@+id/lbl_details"
        android:layout_toLeftOf="@+id/img_mem"
        android:layout_toRightOf="@+id/ly_datetime"
        android:layout_toEndOf="@+id/ly_datetime" />

    <TextView
        android:text="Today is a nice day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_title"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ly_datetime"
        android:layout_toEndOf="@+id/ly_datetime" />

    <ImageView
        android:layout_height="50dp"
        android:id="@+id/img_mem"
        android:layout_width="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>